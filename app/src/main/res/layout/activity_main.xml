<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="40sp"
        android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:textSize="30sp"
                android:background="#DDB8B7B7"
                android:id="@+id/text"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Clear"
                android:backgroundTint="@color/black"
                android:id="@+id/clear"
                android:textSize="15sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:backgroundTint="@color/black"
            android:id="@+id/r1b1"
            android:textSize="30sp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:backgroundTint="@color/black"
            android:id="@+id/r1b2"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:backgroundTint="@color/black"
            android:id="@+id/r1b3"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:backgroundTint="@color/black"
            android:id="@+id/r1b4"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:backgroundTint="@color/black"
            android:id="@+id/r2b1"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:backgroundTint="@color/black"
            android:id="@+id/r2b2"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:backgroundTint="@color/black"
            android:id="@+id/r2b3"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:backgroundTint="@color/black"
            android:id="@+id/r2b4"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:backgroundTint="@color/black"
            android:id="@+id/r3b1"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:backgroundTint="@color/black"
            android:id="@+id/r3b2"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:backgroundTint="@color/black"
            android:id="@+id/r3b3"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="/"
            android:backgroundTint="@color/black"
            android:id="@+id/r3b4"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:backgroundTint="@color/black"
            android:id="@+id/r4b1"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:backgroundTint="@color/black"
            android:id="@+id/r4b2"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="*"
            android:backgroundTint="@color/black"
            android:id="@+id/r4b3"
            android:textSize="30sp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="="
            android:backgroundTint="@color/black"
            android:id="@+id/r4b4"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>